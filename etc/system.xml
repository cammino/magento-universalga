<config>
    <sections>
        <google>
            <groups>
                <analytics>
                    <fields>
                        <googleanalyticssku translate="label">
                            <label>data_layer Sku/ProductId</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>16</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Se ativado, o data_layer passa a pegar o Sku ao ivens do Id do produto no carrinho.</comment>
                        </googleanalyticssku>
                        <concatsku translate="label">
                            <label>Adicionar SKU na frente do nome do produto</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>16</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Se ativado, o data_layer passa a concatenar a SKU do produto na frente de seu nome.</comment>
                        </concatsku>
                    </fields>
                </analytics>
            </groups>
        </google>
    </sections>
</config>
